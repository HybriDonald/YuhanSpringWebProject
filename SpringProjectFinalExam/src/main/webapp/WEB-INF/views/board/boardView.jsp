    pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<!DOCTYPE html>

<jsp:include page="/resources/layouts/topLayout.jsp"/>

<div class="container">
	<div class="flex-row">
		<div class="mt-4">
			<table class="table">
				<thead class="thead-light border" >
				<tr class="mt-4">
				<th scope="col" style="height:10;">
				<p class="h5">${dto.board_title}</p>
